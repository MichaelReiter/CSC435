// An expression e used as an if-statement condition must have type boolean

void main() {
    boolean b;
    boolean[1] booleanarray;

    b = true;
    booleanarray[0] = b;

    if (true) {}
    if (false) {}
    if (b) {}
    if (booleanarray[0]) {}

    if (true) {} else {}
    if (false) {} else {}
    if (b) {} else {}
    if (booleanarray[0]) {} else {}
}
